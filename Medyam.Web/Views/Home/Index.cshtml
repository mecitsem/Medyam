@model IEnumerable<Medyam.Web.Models.PhotoModel>
@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <h3>Images </h3>


    <hr />

    @foreach (var photoModel in Model)
    {
        <div class="col-lg-3 col-sm-4 col-xs-6"><a title="@photoModel.Title" data-tags="@photoModel.Tags" href="#"><img class="thumbnail img-responsive" src="@photoModel.Url"></a></div>
    }
    <hr />
</div>

<div tabindex="-1" class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">×</button>
                <h3 class="modal-title">Heading</h3>
            </div>
            <div class="modal-body">
                <div id="modal_body_image">

                </div>
                <div id="moda_body_image_tags">
                    <span class="label">transport       </span>

                </div>


            </div>
            <div class="modal-footer">

                <button class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
