@model Medyam.Web.Models.PhotoViewModel
@{
    ViewBag.Title = "Create Media";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Create Media</h3>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="title">Title</label>
                @Html.TextBoxFor(t => t.Title, new { @class = "form-control", @required = "", @placeholder = "Title" })
            </div>
            <div class="form-group">
                <label for="photo">File input</label>
                <input type="file" id="photo" name="photo" required="">
                <p class="help-block">Max 4MB.</p>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }

    </div>
</div>
