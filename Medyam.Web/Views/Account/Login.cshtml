
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="@Url.Content("/Images/logo.png")" style="width:48px" class="pull-left" />
            @Html.ActionLink("MediaStock", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</div>
<div class="container">

    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-inline" }))
            {
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="inputLogin" placeholder="Enter demo password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            }

        </div>
        <div class="col-md-4">

        </div>



    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - MediaStock Application</p>
    </footer>
</div>